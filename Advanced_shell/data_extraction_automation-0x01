#!/bin/bash

# This script extracts data from data.json and formats it.

# Check if data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Please run the apiAutomation-0x00 script first." >&2
  exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Capitalize the first letter of the name and type
name_capitalized=$(echo "$name" | sed 's/./\U&/')
type_capitalized=$(echo "$type" | sed 's/./\U&/')

# Convert height from decimetres to meters and weight from hectograms to kilograms
formatted_height=$(echo "scale=1; $height / 10" | bc)
formatted_weight=$(echo "scale=1; $weight / 10" | bc)

# Format the output string
echo "$name_capitalized is of type $type_capitalized, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
